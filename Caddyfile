chicken.servegame.com {
    # Backend API requests - moet VOOR de frontend handle staan
    handle /api/* {
        reverse_proxy backend:8080
    }

    # Static files (images) from backend
    handle /images/* {
        reverse_proxy backend:8080
    }

    # Frontend (alle andere requests)
    handle {
        reverse_proxy frontend:3000
    }
}

#zet hier je domein of ip adres neer voor de server om https te gebruiken
chicken.servegame.com {
    # dit is een soort if statement situatie ze de meest specefieke eerst neerzetten anders pakt die iets die je niet wilt want het stuurt je naar de eerste die waar is
    # Backend API requests
    handle /api/* {
        reverse_proxy backend:8080
    }

    # afbeeldingen
    handle /images/* {
        reverse_proxy backend:8080
    }

    # SignalR hub voor de klokken (negotiate en websocket)
    handle /KlokkenHub {
        reverse_proxy backend:8080
    }
    handle /KlokkenHub/* {
        reverse_proxy backend:8080
    }

    # Frontend (alle andere requests)
    handle {
        reverse_proxy frontend:3000
    }
}
